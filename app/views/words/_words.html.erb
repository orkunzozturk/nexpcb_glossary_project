<div id="words">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th
        id="words-chinese"
        class="text-left py-3"
        data-reflex="click->Table#sort"
        data-column="chinese"
        data-direction="asc"
      >
        <span>Chinese</span>
      </th>
      <th
        id="words-english"
        class="text-left py-3"
        data-reflex="click->Table#sort"
        data-column="english"
        data-direction="asc"
      >
        <span>English</span>
      </th>
        <%# <th colspan="3"></th> %>
      </tr>
    </thead>

    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.chinese %></td>
          <td class="copy" role="button" data-clipboard-text="<%= word.english%>"> <%= word.english %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= page_entries_info @words %>
  <%= paginate @words %>
</div>
